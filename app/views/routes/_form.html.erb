<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :city_from %><br />
    <%= f.collection_select :city_from_id, City.all, :id, :name, :include_blank => "Please select" %>
  </div>
  <div class="field">
    <%= f.label :city_to %><br />
    <%= f.collection_select :city_to_id, City.all, :id, :name, :include_blank => "Please select" %>    
  </div>
  <div class="field">
    <%= f.label :info_priority %><br />
    <%= f.number_field :info_priority %>
  </div>
  <div class="field">
    <%= f.label :is_active %><br />
    <%= f.check_box :is_active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
